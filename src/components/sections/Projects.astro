---
import Section from "@/components/Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, highlights, name, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a
                    href={`https://${url}`}
                    title={`Ver el proyecto ${name}`}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {name}
                  </a>
                  {isActive && <span>&bull;</span>}
                </h3>
                <p>{description}</p>
              </header>
              <footer>
                {highlights.map((highlight) => {
                  return <span>{highlight}</span>;
                })}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }
  article header {
    flex: 1;
  }
  article h3 {
    margin-bottom: 4px;
  }
  article a {
    color: #111;
  }
  article a:hover {
    text-decoration: underline;
  }
  article p {
    line-height: 1.1rem;
    font-weight: 550;
  }
  article h3 span {
    color: #00da00;
  }
  footer {
    display: flex;
    gap: 6px;
    font-size: 0.6rem;
  }
  footer span {
    display: inline;
    border-radius: 6px;
    background-color: #eee;
    color: #444;
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
